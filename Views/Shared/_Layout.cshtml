<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - LocalMusicStreamer</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true"/>
    <link href="~/css/output.css" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col">
<header>
    <nav class="bg-gray-500 bg-opacity-30 shadow text-xl rounded-2xl m-2">
        <div class="container mx-auto px-4 py-4 flex justify-center items-center">
            <a class="font-semibold text-white mr-6" asp-area="" asp-controller="Home" asp-action="Index">LocalMusicStreamer</a>
            <div class="hidden lg:flex space-x-6">
                <ul class="flex space-x-6">
                    <li>
                        <a class="text-white hover:underline" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a class="text-white hover:underline" asp-area="" asp-controller="Upload" asp-action="Index">Upload</a>
                    </li>
                    <li>
                        <a class="text-white hover:underline" asp-controller="Library" asp-action="Index">Library</a>
                    </li>
                    <li>
                        <a class="text-white hover:underline" asp-controller="Playlists" asp-action="Index">Playlists</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mx-auto px-4 flex-grow">
    <main role="main" class="py-4">
        @RenderBody()
    </main>
</div>

<footer class="text-gray-600 bg-transparent py-4">
    <div class="container mx-auto px-4">
        <audio controls class="w-full backdrop-blur-lg rounded-2xl shadow-lg shadow-black">
            <source src="" type="audio/flac">
            <source src="" type="audio/mp3">
        </audio>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
